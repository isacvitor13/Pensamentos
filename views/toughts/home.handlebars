<div class="home-header">
    {{#if search}}
    <h1>Você esta buscando por <span>{{search}}</span> </h1>
    {{#if toughtsQty}}
    <p>Foram encontrados {{toughtsQty}} resulatdos da sua busca </p>
    {{else}}
    <p>Nenhum pensamento encontrado para <span>{{search}}</span></p>
    {{/if}}
    {{else}}
    <h1>Conheça alguns de nossos <span>Pensamentos</span></h1>
    {{/if}}
    <h1>Pensamentos</h1>

    <form action="/" method="get">
        <input type="text" name="search" placeholder="Está buscando por algo ?">
        <input type="submit" value="Buscar" class="btn">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit">Mais recente</button>
        </form>
        <form action="/" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit">Mais antigo</button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>

<div class="toughts-container">
    {{#each toughts}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>
            por <span> {{this.User.name}}</span>
        </figcaption>
    </figure>

    {{/each}}
</div>